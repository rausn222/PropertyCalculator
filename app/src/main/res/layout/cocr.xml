<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Cash-on-Cash Return"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp" />
    <EditText
        android:id="@+id/cocr_purchase"
        android:layout_width="match_parent"
        android:layout_below="@+id/textView3"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:hint="Purchase Price"
        android:inputType="number"/>
    <TextView
        android:id="@+id/cocr_p"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/cocr_purchase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select down payment type"/>
    <RadioGroup
        android:id="@+id/cocr_down"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/cocr_p"
        android:layout_below="@+id/cocr_purchase"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/cocr_perc"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="%"/>
        <RadioButton
            android:id="@+id/cocr_rupe"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="â‚¹"/>
    </RadioGroup>
    <EditText
        android:id="@+id/cocr_down_edt"
        android:layout_width="match_parent"
        android:layout_below="@+id/cocr_p"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:hint="Enter Down Payment"
        android:inputType="number"/>
    <EditText
        android:id="@+id/cocr_annul"
        android:layout_width="match_parent"
        android:layout_below="@+id/cocr_down_edt"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:hint="Annual Interest rate"
        android:inputType="number"/>
    <EditText
        android:id="@+id/cocr_mon_exp"
        android:layout_width="match_parent"
        android:layout_below="@+id/cocr_annul"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:hint="Annual Interest rate"
        android:inputType="number"/>
    <EditText
        android:id="@+id/cocr_otr_exp"
        android:layout_width="match_parent"
        android:layout_below="@+id/cocr_mon_exp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:hint="Annual Interest rate"
        android:inputType="number"/>
    <EditText
        android:id="@+id/cocr_mon_inc"
        android:layout_width="match_parent"
        android:layout_below="@+id/cocr_otr_exp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:hint="Annual Interest rate"
        android:inputType="number"/>
    <Button
        android:id="@+id/cocr_rst"
        android:layout_below="@+id/cocr_mon_inc"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="RESET"
        android:layout_width="match_parent"/>
    <Button
        android:id="@+id/cocr_calcula"
        android:layout_below="@+id/cocr_rst"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="CALCULATE"
        android:layout_width="match_parent"/>
    </RelativeLayout>
</ScrollView>